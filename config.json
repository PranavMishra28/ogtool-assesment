{
    "output_directory": "./output",
    "log_level": "INFO",
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
    "sources": {
        "blog": {
            "enabled": true,
            "delay_between_requests": [1, 3]
        },
        "pdf": {
            "enabled": true,
            "max_chapters": 0
        },
        "substack": {
            "enabled": true
        },
        "github": {
            "enabled": true,
            "max_files_per_repo": 50
        }
    },
    "extractors": {
        "generic_blog": {
            "article_selectors": ["article", ".post", ".entry", ".blog-post"],
            "list_page_link_patterns": ["/(article|post|blog)/", "/\\d{4}/\\d{2}/"]
        },
        "pdf": {
            "chapter_patterns": ["(?:Chapter|CHAPTER)\\s+(\\d+|[IVX]+)[:\\s]+(.+?)(?=(?:Chapter|CHAPTER)\\s+\\d+|$)"]
        },
        "github": {
            "access_token": "",
            "max_files": 50,
            "file_extensions": [".md", ".markdown", ".txt", ".rst"]
        }
    }
}
